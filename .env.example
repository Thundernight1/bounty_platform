# Application Settings
APP_NAME=bounty_platform
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bounty_platform
# For SQLite (development): DATABASE_URL=sqlite:///./bounty_platform.db

# API Security
API_KEY=your-secret-api-key-here
# REQUIRED: A strong, randomly generated secret key for JWT token signing.
# You can generate one with: openssl rand -hex 32
SECRET_KEY=generate_a_strong_secret_key_and_place_it_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=

# Blockchain Configuration
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
DEPLOYER_PRIVATE_KEY=0x...
CONTRACT_ADDRESS=

# External Tools (optional paths)
ZAP_CLI_PATH=
NUCLEI_PATH=
MYTHRIL_PATH=
OSV_SCANNER_PATH=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Redis (for Celery/caching)
REDIS_URL=redis://localhost:6379/0

# Airflow (if using)
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./airflow/dags
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@bountyplatform.com
